= form_for @door_event do |f|
  - if @door_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@door_event.errors.count, "error")} prohibited this door_event from being saved:"
      %ul
        - @door_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :event_type
    = f.text_field :event_type
  .field
    = f.label :sensor_name
    = f.text_field :sensor_name
  .actions
    = f.submit 'Save'
